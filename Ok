<body>
    <div class="message-box">Good evening, how are you? Will you like to proceed?</div>
    <button class="btn" onclick="showLetter()">Proceed</button>

    <div class="letter-container" onclick="openLetter()">
        <div class="letter">
            <div class="heart">❤️</div>
        </div>
    </div>

    <div class="letter-content">
        Hey love, this is your special message!  
        <br><br>Click anywhere to continue...
    </div>

    <div class="final-message">LOVE YOU ❤️</div>

    <script>
        function showLetter() {
            document.querySelector(".message-box").style.display = "none";
            document.querySelector(".btn").style.display = "none";
            document.querySelector(".letter-container").style.display = "block";
        }

        function openLetter() {
            document.querySelector(".letter").style.display = "none";
            document.querySelector(".letter-content").style.display = "block";
            document.querySelector(".letter-content").addEventListener("click", showFinalMessage);
        }

        function showFinalMessage() {
            document.querySelector(".letter-content").style.display = "none";
            document.querySelector(".final-message").style.display = "block";
        }
    </script>
</body>
