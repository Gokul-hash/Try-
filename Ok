        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #ffebf2;
            flex-direction: column;
            text-align: center;
        }

        .message-box {
            font-size: 1.5rem;
            margin-bottom: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1.2rem;
            border: none;
            background-color: #ff4d6d;
            color: white;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }

        .btn:hover {
            background-color: #e63950;
        }

        .letter-container {
            display: none;
            margin-top: 20px;
            cursor: pointer;
            position: relative;
        }

        .letter {
            width: 150px;
            height: 120px;
            background-color: white;
            border: 2px solid #ff4d6d;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        .heart {
            font-size: 2rem;
            color: red;
            position: absolute;
            top: 40px;
